<script>
let botão = document.getElementById('botão');
chance = 7;

botão.addEventListener("click", function(){
let entrada = document.getElementById('entrada');
let mensagem = document.getElementById("mensagem");
let chances = document.getElementById("chances");

let numero = sortNumero();
chance = chance -1;
if((entrada.value !==numero)){

    if(entrada.value < numero){
        let resultado = numero - entrada.value;
        novamen = "Você erros, a diferença é de "+ resultado+ " para mais"; 
    mensagem.textContent = novamen;
   
    }
    if(entrada.value > numero){
        let resultado = entrada.value -numero ;
        novamen = "Você erros, a diferença é de "+ resultado+ " para menos"; 
    mensagem.textContent = novamen;
   
    }
  
    chances.textContent = "Você tem " + chance + " chances";
   
}
if(entrada.value > 100 || isNaN(entrada.value) ||entrada.value < 1 ){
    novamen = "Você deve inserir um numero entre 1 e 100"; 
    mensagem.textContent = novamen;
}

if(entrada.value == numero){
    novamen = "Você ganhou esse joguinho de criaça, parabens"; 
    mensagem.textContent = novamen;
    
    setTimeout(resetar,5000);
        chances.textContent = "Você tem " + chance + " chances";
}
if((chance == 0) && (entrada.value !== numero)){
    novamen = "Você deve inserir um numero entre 1 e 100"; 
    mensagem.textContent = novamen;

    chances.innerHTML = "<p>Você é a vergonha para todo seu clã <p>";
        setTimeout(resetar,5000);
        
}

});
function resetar(){
    
    chance = 7;
        chances.textContent = "Você tem " + chance + " chances";
    
        mensagem.innerHTML = " <p> <br> </p>";
    }
    
function sortNumero() {
    return Math.floor(Math.random() * 100) + 1;
}
</script>